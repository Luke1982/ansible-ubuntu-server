{% set user = item.value.docroot_owner %}

[{{ user }}]
{# Check /etc/php/7.x/fpm/pool.d/www.conf for all the options #}

user = {{ user }}
group = www-data
listen = /run/php/php7.4-fpm-{{ user }}.sock

listen.owner = {{ user }}
listen.group = www-data

pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3